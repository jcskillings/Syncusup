<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/parentList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="18sp"
        android:text="parent list"
        android:layout_gravity="center_horizontal" />
    <TextView
        android:id="@+id/todo_title_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="12sp"
        android:text="Todo title" />
    <EditText
        android:id="@+id/todo_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="10dp"/>
    <TextView
        android:id="@+id/todo_description_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="12sp"
        android:imeOptions="actionDone"
        android:text="Todo description" />
    <EditText
        android:id="@+id/description_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_weight="1"/>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/whoCompleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="12sp"
        android:text="Completed By:  "
        android:visibility="invisible" />
    <TextView
        android:id="@+id/dateCompleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="12sp"
        android:text="dateCompleted "
        android:layout_toRightOf="@+id/whoCompleted"
        android:visibility="invisible" />

</LinearLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/completeButton"
        android:visibility="visible"
        android:text="Complete"
        android:layout_weight="1"
        android:background="@drawable/synqus_button_selector"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal" />


    <Button
        android:id="@+id/editButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Edit"
        android:visibility="invisible"
        android:background="@drawable/synqus_button_selector"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center" />

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/delete"
        android:visibility="invisible"
        android:background="@drawable/synqus_button_selector"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/save"
        android:visibility="invisible"
        android:background="@drawable/synqus_button_selector"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center" />


</LinearLayout>
</ScrollView>